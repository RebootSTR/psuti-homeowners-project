<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:popUpTo="@id/navgraph"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_splashFragment_to_indicationsFragment"
            app:popUpTo="@id/navgraph"
            app:destination="@id/indicationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_indicationsFragment"
            app:destination="@id/indicationsFragment"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_authFragment_to_supportPlaceHolderFragment"
            app:destination="@id/supportPlaceHolderFragment" />

        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/supportPlaceHolderFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.auth.SupportPlaceHolderFragment"
        android:label="SupportPlaceHolderFragment"
        tools:layout="@layout/fragment_place_holder_support" />

    <fragment
        android:id="@+id/indicationsFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.counters.CountersFragment"
        android:label="IndicationsFragment"
        tools:layout="@layout/fragment_counters" >
        <action
            android:id="@+id/action_indicationsFragment_to_requestFragment2"
            app:destination="@id/requestFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_registrationFragment_to_supportPlaceHolderFragment"
            app:destination="@id/supportPlaceHolderFragment" />
        <action
            android:id="@+id/action_authFragment_to_indicationsFragment"
            app:destination="@id/indicationsFragment"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/requestFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.requests.fragment.RequestsFragment"
        android:label="RequestFragment"
        tools:layout="@layout/fragment_requests">
        <argument
            android:name="toCreateFragment"
            app:argType="ru.psuti.apache1337.homeowners.domain.requests.model.RequestModel"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_requestFragment_to_openedRequestFragment"
            app:destination="@id/openedRequestFragment" />
    </fragment>

    <fragment
        android:id="@+id/requestsCreateFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.requests.fragment.RequestsCreateFragment"
        android:label="fragment_requests_create"
        tools:layout="@layout/fragment_create_requests">
        <argument
            android:name="request"
            app:argType="ru.psuti.apache1337.homeowners.domain.requests.model.RequestModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/requestsHistoryFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.requests.fragment.RequestsHistoryFragment"
        android:label="fragment_requests_history"
        tools:layout="@layout/fragment_requests_history" />

    <fragment
        android:id="@+id/openedRequestFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.requests.fragment.RequestOpenedFragment"
        android:label="fragment_opened_request"
        tools:layout="@layout/fragment_opened_request">
        <argument
            android:name="request"
            app:argType="ru.psuti.apache1337.homeowners.domain.requests.model.RequestModel" />
        <action
            android:id="@+id/action_openedRequest_to_requestFragment"
            app:destination="@id/requestFragment"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.psuti.apache1337.homeowners.presentation.profile.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/navgraph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
